#!/bin/bash
basedir=$(dirname "$0")/..
mutagen-compose -f "$basedir/docker-compose.yml" run --rm server sh -c 'mix do deps.get, deps.compile, ecto.create' &&
mutagen-compose -f "$basedir/docker-compose.yml" run --rm client sh -c 'npm ci'
mutagen-compose -f "$basedir/docker-compose.yml" run --rm marketing sh -c 'npm ci'

code=$?
mutagen-compose down
exit $code
