{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@Button": ["components/shared/Button/Button"],
      "@Badge": ["components/shared/Badge/Badge"],
      "@Dropdown": ["components/shared/Dropdown/Dropdown"],
      "@ExternalLink": ["components/shared/ExternalLink/ExternalLink"],
      "@Form": ["components/shared/Form/Form"],
      "@Icon": ["components/shared/Icon/Icon"],
      "@IconButton": ["components/shared/IconButton/IconButton"],
      "@Input": ["components/shared/Input/Input"],
      "@InternalLink": ["components/shared/InternalLink/InternalLink"],
      "@PageHeading": ["components/shared/PageHeading/PageHeading"],
      "@RadioButton": ["components/shared/RadioButton/RadioButton"],
      "@RadioGroup": ["components/shared/RadioGroup/RadioGroup"],
      "@Spinner": ["components/shared/Spinner/Spinner"],
      "@Cards/*": ["components/cards/*"],
      "@Components/*": ["components/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
